# Gem을 다운로드할 소스 주소
source "https://rubygems.org"

# GitHub Pages 환경에서 Jekyll 사이트를 빌드하기 위한 Gem
# 이 Gem 안에 Jekyll 및 GitHub Pages에서 지원하는 모든 플러그인들이 포함되어 있습니다.
gem "github-pages", group: :jekyll_plugins

# 만약 github-pages Gem에 포함되지 않은 특정 테마나 플러그인을 사용하려면
# 아래에 추가적으로 명시해주셔야 합니다.
# 예: gem "minima", "~> 2.5" # (minima 테마는 보통 github-pages에 포함되어 있습니다)
# 예: gem "my-custom-jekyll-plugin"